<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myApp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"

        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FF5D5D"
        android:textSize="30dp"
        android:text="My App 5" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="20dp"
        android:textSize="20dp"
        android:text="In this version I added:\n  1. Shared Preferences.\n  2. Fragments." />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"

        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/locET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"

        android:inputType="textPersonName"
        android:hint="Location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBTN"
            android:onClick="saveClicked"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:text="SAVE IN SP" />

        <Button
            android:id="@+id/goBTN"
            android:onClick="goClicked"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="GO" />
    </LinearLayout>

    <Button
        android:id="@+id/fragBTN"
        android:onClick="fragClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="130dp"
        android:text="FRAGMENTS" />

</LinearLayout>